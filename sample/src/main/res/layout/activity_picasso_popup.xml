<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView android:id="@+id/iv_image"
        android:layout_width="match_parent" android:layout_height="wrap_content" />

    <FrameLayout android:id="@+id/fl_container"
        android:visibility="gone" android:background="@color/light_dark"
        android:layout_width="match_parent" android:layout_height="match_parent">

        <uk.co.senab.photoview.PhotoView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

</FrameLayout>